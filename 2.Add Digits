https://leetcode.com/problems/add-digits/description/

class Solution {
    public int addDigits(int num) {
        while (num > 9) {
            int sum = 0;              // reset sum for each iteration
            for (int i = num; i > 0; i /= 10) {
                sum += i % 10;
            }
            num = sum;
        }
        return num;
    }
}
